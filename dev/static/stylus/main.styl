@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'

html
	font-size baseFontSize
	height 100%
	line-height 1.3

body
	font-family mainFontBold
	height 100%
	color primaryBlack

h1,h2,h3,h4,h5,h6
	margin 0
	font-weight normal
	font-size 18px

ul,li
	list-style-type none
	margin 0
	padding 0

p
	margin 0

a
	color black
	text-decoration none

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle

textarea
	resize none

section
	position relative

input,
select,
button
	outline none

*, *:before, *:after
	box-sizing border-box

.wrapper
	display flex
	flex-direction column
	height 100%
	max-width 940px
	margin 0 auto

.content
	flex 1 0 auto

::-webkit-scrollbar 
	width 5px

::-webkit-scrollbar-track {
    background-color: primarGrey;
}

::-webkit-scrollbar-thumb {
    box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
}

@media screen and (max-width: 940px)
	.wrapper
		padding 25px 25px

