.button
  padding 10px 35px
  border-radius 35px
  display block
  box-sizing border-box
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);

.filled
  background-color primaryBlack
  color #fff
  transition background-color .3s

.filled:hover
  background-color #fff
  color primaryBlack
  outline 2px solid primaryBlack

.outline
  background-color #fff
  color primaryBlack
  outline 2px solid primaryBlack

.outline:hover
  background-color primaryBlack
  color #fff
  transition background-color .3s